<Page x:Class="StatsApp.GeneralInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:StatsApp"
      mc:Ignorable="d"
      Title="GeneralInfo" Height="530" Width="1200">
    <Grid Background="Aqua">
        <StackPanel>
            <Label Name="KeyBoardInfo" HorizontalAlignment="Center" FontSize="24">KeyboardHere</Label>
            <Label Name="MouseInfo" HorizontalAlignment="Center" FontSize="24">MouseHere</Label>
            <Label Name="CPUinfo" HorizontalAlignment="Center" FontSize="24">CPU</Label>
            <ProgressBar Name="CPUBar" Width="200" Height="20" ></ProgressBar>
            <Label Name="GPUinfo" HorizontalAlignment="Center" FontSize="24">GPU</Label>
            <ProgressBar Name="GPUBar" Width="200" Height="20" ></ProgressBar>
            <Label Name="RAMinfo" HorizontalAlignment="Center" FontSize="24">RAM</Label>
            <ProgressBar Name="RAMBar" Width="200" Height="20" ></ProgressBar>
            <Label Name="UseInfo" HorizontalAlignment="Center" FontSize="24" Height="60"></Label>

        </StackPanel>
    </Grid>
</Page>
